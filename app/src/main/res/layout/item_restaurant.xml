<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Nazwa restauracji -->
    <TextView
        android:id="@+id/tvRestaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Nazwa Restauracji" />

    <!-- Szczegóły restauracji -->
    <TextView
        android:id="@+id/tvRestaurantDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Szczegóły Restauracji" />

    <!-- Strona internetowa -->
    <TextView
        android:id="@+id/tvRestaurantWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Website: www.example.com" />

    <!-- Koordynaty restauracji -->
    <TextView
        android:id="@+id/tvRestaurantCoordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Koordynaty" />

    <!-- Przyciski -->
    <LinearLayout
        android:id="@+id/btnContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/btnShowPromotions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pokaż promocje" />

        <Button
            android:id="@+id/btnShowReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pokaż opinie"
            android:layout_marginStart="16dp" />
    </LinearLayout>
</LinearLayout>
