<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:padding="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#2A2A2A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/tvRestaurantName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="Nazwa Restauracji"
                android:textColor="#ffcc00"
                android:maxLines="1"
                android:ellipsize="end" />

            <ImageButton
                android:id="@+id/btnFavourite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_heart_outline"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Favourite button"
                app:tint="#FF5252"
                android:padding="8dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvRestaurantDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textSize="16sp"
            android:text="Telefon: 123456789"
            android:textColor="#4FC3F7"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRestaurantWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:textSize="16sp"
            android:text="Website: www.example.com"
            android:textColor="#4FC3F7"
            android:layout_marginTop="4dp"
            android:autoLink="web"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/btnContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnShowPromotions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00C853"
                android:text="Promocje"
                android:textColor="#000000"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnShowReviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFD600"
                android:text="Opinie"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAddReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#51bcda"
                android:text="Dodaj opiniÄ™"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
